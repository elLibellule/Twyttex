extends ../layout

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="flex-fill")
            form(class="card" method="post" action= tweet && tweet._id ? "/tweets/update/" + tweet._id : "/tweets")
                div(class="card-header") Ã‰crire un tweet
                div(class="card-body")
                    div(class="mb-3")
                        textarea(class="form-control" name="content" placeholder="Que se passe-t-il ?")= tweet && tweet.content
                    if errors 
                        ul  
                            each error in errors 
                                li(class='text-danger')= error
                    div(class="w-100")
                        button(class="btn btn-primary mt-2 text-end" type='submit' style="float: right") send 
                        a(class="btn btn-danger mt-2 text-end" href='/tweets' style="float: right" ) cancel