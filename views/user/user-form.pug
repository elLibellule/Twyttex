extends ../layout

block content
    div(class="d-flex flex-row content mx-auto mt-3")
        div(class="flex-fill")
            form(class="card" method="post" action="/users/signup" )
                div(class="card-header") Inscription
                div(class="card-body")
                    div(class="form-group")
                        label Username 
                        input(class="form-control" type="text" name="username")  
                    div(class="form-group")
                        label Email 
                        input(class="form-control" type="email" name="email") 
                    div(class="form-group")
                        label Password 
                        input(class="form-control" type="password" name="password")
                if errors 
                    ul  
                        each error in errors 
                            li(class='text-danger')= error
                div(class="w-100")
                    input(type="submit" value="Inscription" class="btn btn-primary ms-auto d-block")