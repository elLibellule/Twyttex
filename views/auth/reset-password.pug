extends ../layout

block content
    script(src="/javascripts/auth/login-form.js") 
    div(class="d-flex flex-row content mx-auto mt-3")
        div(class="flex-fill")
            form(class="card" method="post" action=url )
                div(class="card-header") Reset password
                div(class="card-body")
                    div(class="form-group")
                        label Password 
                        input(class="form-control" type="password" name="password")
                if errors 
                    ul  
                        each error in errors 
                            li(class='text-danger')= error
                div(class="w-100 d-flex flex-row justify-content-space-between align-items-center")
                    input(type="submit" value="Save new password" class="btn btn-primary ms-auto d-block")